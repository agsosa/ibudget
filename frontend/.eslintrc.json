{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "ignorePatterns": ["**/treact/*"],
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": { "react/react-in-jsx-scope": 0 }
}
